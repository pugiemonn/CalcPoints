<h1>Editing spent_point</h1>

<% form_for(@spent_point) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><% if @uid=params[:user_id] %>
      <%=  @user.user_name + hidden_field_tag("spent_point[user_id]",@uid,:id=>"spent_point_user_id")  %> 
    <% else %>
    <%= f.text_field :user_id %>
    <% end %>
  </p>
  <p>
    <%= f.label :point %><%=h f.text_field :point %>
  </p>
  <p>
    <%= f.label :date %><%=h params[:date] %>
<!--    <%= f.date_select :date %>-->
  </p>
  <p>
    <%= f.submit 'Update', :class => 'text-center' %>
  </p>
<% end %>

<%= link_to 'Show', @spent_point %> |
<%= link_to 'Back', spent_points_path %>
