<h1>Listing timelines</h1>

<table>

  <tr>
    <td>合計</td>

    <% @users.each do |u| %>
    <td><%= u.points.sum(:point, :conditions => ["user_id = ?", u.id]) %></td>
    <% end %>

  </tr>

  <tr>
    <th>Date</th>
    <% @users.each do |u| %>
    <th><%= u.user_name %></th>
    <% end %>
  </tr>

<% @date_box.each do |d, b| %>
  <tr>
    <td><%=d %><% b%></td>
    <% @users.each do |u|  %>
      <td>
        <%# @hoge = u.points.find(:first, :conditions => "date=\"#{d}\"").try(:id) ? "hoge" : "huga" %>
        <%# @p = u.points.find(:first, :conditions => "date=\"#{d}\"").try(:id) ? u.points.find(:first, :conditions => "date=\"#{d}\"") : "" %>
        
	<% if u.points.find(:first, :conditions => "date=\"#{d}\"").try(:id) %> 
		<% @p = u.points.find(:first, :conditions => "date=\"#{d}\"") %>
                <%# フラグ  %>
		<% @hoge = "hoge" %>
	<% else %>
                <%# フラグ  %>
		<% @hoge = "huga" %>
        <% end %>

        <% if @hoge == "hoge" %>
          <%# @p.point %>
          <% @hoge  %>
          <%= link_to @p.point, :controller => 'points',:action => 'edit', :id => @p.id %>
        <% else %>
          <%= link_to '0', :controller => 'points', :action => 'new', :user_id => u.id, :date => d %>
        <% end %>
        <% @hoge %>
      </td>
    <% end %>
  </tr>
<% end %>

